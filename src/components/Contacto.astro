---
import { validateForm } from './contacto.js';  // Asegúrate de que esta importación esté correcta
---

<div class="max-w-2xl mx-auto mt-16 bg-white p-8 rounded-lg shadow-lg min-h-[600px] mb-16">
  <form id="contact-form" class="space-y-6" onsubmit="return validateForm(event)">
    
    <!-- Nombre -->
    <div>
      <label id="nombre" for="nombre" class="block text-gray-700 font-bold mb-2">Nombre</label>
      <input type="text" id="nombre" name="nombre" placeholder="Introduce tu nombre" class="w-full p-4 border rounded-md bg-gray-100" />
      <p id="nombre-error" class="text-red-500 text-sm hidden">El nombre no puede estar vacío.</p>
    </div>

    <!-- Email -->
    <div>
      <label for="email" class="block text-gray-700 font-bold mb-2">Email</label>
      <input type="email" id="email" name="email" placeholder="Introduce tu email" class="w-full p-4 border rounded-md bg-gray-100" />
      <p id="email-error" class="text-red-500 text-sm hidden">Por favor, ingresa un correo electrónico válido.</p>
    </div>

    <!-- Mensaje -->
    <div>
      <label for="mensaje" class="block text-gray-700 font-bold mb-2">Mensaje</label>
      <textarea id="mensaje" name="mensaje" placeholder="Introduce tu mensaje" rows="6" class="w-full p-4 border rounded-md bg-gray-100"></textarea>
      <p id="mensaje-error" class="text-red-500 text-sm hidden">El mensaje debe tener al menos 20 caracteres.</p>
    </div>

    <!-- Botón de enviar -->
    <button type="submit" class="w-full bg-[#DB972B] text-white font-bold py-3 rounded-md hover:opacity-75 transition-opacity">Enviar</button>
  </form>
</div>

<!-- Importar el script de JavaScript -->
<script type="module">
  import { validateForm } from './contacto.js';
</script>



  


  